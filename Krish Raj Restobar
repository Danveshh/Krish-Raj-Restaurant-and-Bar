                                        <span class="size-btn" data-size="90ml" data-price="170">90ml - ‚Çπ170</span>
                                        <span class="size-btn" data-size="60ml" data-price="120">60ml - ‚Çπ120</span>
                                        <span class="size-btn selected" data-size="30ml" data-price="90">30ml - ‚Çπ90</span>
                                    </div>
                                </div>
                                <div class="price-controls-container">
                                    <div class="item-price">‚Çπ</div>
                                    <div class="item-controls" data-name="Blue Riband Duet" data-price="90" data-size="30ml">
                                        <button class="add-to-cart-btn" onclick="addToCart(this)">Add</button>
                                    </div>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Cart Screen -->
        <div id="cart-screen" class="screen">
            <div class="screen-header">
                <button class="back-button" onclick="showScreen('home')">‚Üê</button>
                <h1>Your Cart</h1>
            </div>
            <div class="screen-content">
                <div id="cart-items-container">
                    <!-- Cart items will be populated here -->
                </div>
                <div id="empty-cart" class="empty-cart">
                    <div class="empty-cart-icon">üõí</div>
                    <h3>Your cart is empty</h3>
                    <p>Add some delicious items to get started!</p>
                </div>
                <div id="cart-summary" style="display: none;">
                    <div class="cart-total">
                        <h3>Total: ‚Çπ<span id="cart-total-amount">0</span></h3>
                        <p style="color: #666; font-size: 14px;">Inclusive of all taxes</p>
                    </div>
                    <button class="order-btn" onclick="placeOrder()">Place Order</button>
                </div>
            </div>
        </div>
        
        <!-- Offers Screen -->
        <div id="offers-screen" class="screen">
            <div class="screen-header">
                <button class="back-button" onclick="showScreen('home')">‚Üê</button>
                <h1>Offer Zone</h1>
                <div class="cart-icon" onclick="showScreen('cart')" style="margin-left: auto;">
                    üõí <span id="cart-count">0</span>
                </div>
            </div>
            <div class="screen-content">
                <!-- Offers List View -->
                <div id="offers-list">
                    <h2 class="menu-title" style="margin-top: 10px; text-align: left; color: #FFC72C;">TRENDING OFFERS</h2>
                    <div class="offer-card" onclick="showOfferDetails('HAPPY HOUR')">
                        <h2>Happy Hour Special</h2>
                        <p>Buy 1 Get 1 on all Kingfisher Beers!</p>
                        <p style="font-size: 0.875rem;">Valid from 4 PM to 7 PM, Monday to Thursday</p>
                        <div class="claim">
                            <span>Claim now</span>
                            <span>‚Üí</span>
                        </div>
                    </div>
                    <div class="offer-card" onclick="showOfferDetails('KF WEEKDAY SPECIAL')">
                        <h2>KF Weekday Special</h2>
                        <p>30% off on KF Premium & Ultra Max!</p>
                        <p style="font-size: 0.875rem;">Valid Monday to Wednesday, all day</p>
                        <div class="claim">
                            <span>Claim now</span>
                            <span>‚Üí</span>
                        </div>
                    </div>
                </div>

                <!-- Offer Details View -->
                <div id="offer-details" style="display: none;">
                    <div class="menu-section">
                        <div style="text-align: center; padding: 20px;">
                            <div style="font-size: 64px; margin-bottom: 16px;">üéâ</div>
                            <h2 style="color: #FFC72C; margin-bottom: 16px;" id="offer-title">Congratulations!</h2>
                            <p style="color: white; margin-bottom: 20px;" id="offer-description">Your offer has been activated</p>
                            
                            <div style="background-color: #FFC72C; border: 2px dashed #C11B1F; border-radius: 8px; padding: 20px; margin: 20px 0; text-align: center;">
                                <p style="color: #666; font-size: 0.875rem; margin-bottom: 8px;">Your Offer Code</p>
                                <p style="color: #C11B1F; font-size: 2rem; font-weight: bold; margin-bottom: 8px;">KFPILOT</p>
                                <p style="color: #666; font-size: 0.875rem;">Show this code to your server</p>
                            </div>
                            
                            <button class="form-button" onclick="applyOffer()" style="margin-bottom: 10px;">Apply Offer</button>
                            <button class="form-button" onclick="backToOffers()" style="background-color: #666;">Back to Offers</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        let cart = [];

        // Cart functionality
        function addToCart(button) {
            const itemData = button.parentElement;
            const name = itemData.dataset.name;
            const price = parseInt(itemData.dataset.price);
            const size = itemData.dataset.size || '';
            const key = name + '|' + size;

            const existingItem = cart.find(item => item.key === key);

            if (existingItem) {
                existingItem.quantity += 1;
            } else {
                cart.push({
                    key: key,
                    name: name,
                    size: size,
                    price: price,
                    quantity: 1
                });
            }

            updateCartUI(button);
            updateCartCount();
        }

        function updateCartUI(button) {
            const itemData = button.parentElement;
            const name = itemData.dataset.name;
            const size = itemData.dataset.size || '';
            const key = name + '|' + size;
            const item = cart.find(item => item.key === key);

            if (item && item.quantity > 0) {
                itemData.innerHTML = `
                    <div class="quantity-controls">
                        <button class="quantity-btn" onclick="decreaseQuantity('${name.replace(/'/g, "\\'")}', '${size}')">-</button>
                        <span>${item.quantity}</span>
                        <button class="quantity-btn" onclick="increaseQuantity('${name.replace(/'/g, "\\'")}', '${size}')">+</button>
                    </div>
                `;
            }
        }

        function increaseQuantity(itemName, itemSize) {
            const key = itemName + '|' + (itemSize || '');
            const item = cart.find(item => item.key === key);
            if (item) {
                item.quantity += 1;
                updateAllItemControls();
                updateCartCount();
            }
        }

        function decreaseQuantity(itemName, itemSize) {
            const key = itemName + '|' + (itemSize || '');
            const item = cart.find(item => item.key === key);
            if (item) {
                item.quantity -= 1;
                if (item.quantity <= 0) {
                    cart = cart.filter(cartItem => cartItem.key !== key);
                }
                updateAllItemControls();
                updateCartCount();
            }
        }

        function updateAllItemControls() {
            document.querySelectorAll('.menu-list-item').forEach(item => {
                const name = item.querySelector('.menu-item-name').textContent.trim();
                const sizeSelector = item.querySelector('.size-selector');
                if (sizeSelector) {
                    const selectedBtn = sizeSelector.querySelector('.size-btn.selected');
                    if (selectedBtn) {
                        updateControlsForSize(item, name, selectedBtn.dataset.size, selectedBtn.dataset.price);
                    }
                } else {
                    // For items without size selectors
                    const itemData = item.querySelector('.item-controls');
                    const size = '';
                    const key = name + '|' + size;
                    const cartItem = cart.find(item => item.key === key);
                    if (cartItem && cartItem.quantity > 0) {
                        itemData.innerHTML = `
                            <div class="quantity-controls">
                                <button class="quantity-btn" onclick="decreaseQuantity('${name.replace(/'/g, "\\'")}', '${size}')">-</button>
                                <span>${cartItem.quantity}</span>
                                <button class="quantity-btn" onclick="increaseQuantity('${name.replace(/'/g, "\\'")}', '${size}')">+</button>
                            </div>
                        `;
                    } else {
                        itemData.innerHTML = `<button class="add-to-cart-btn" onclick="addToCart(this)" data-name="${name}" data-price="${itemData.getAttribute('data-price') || ''}" data-size="">Add</button>`;
                        itemData.setAttribute('data-name', name);
                        itemData.setAttribute('data-size', '');
                    }
                }
            });
        }

        function updateCartCount() {
            const totalItems = cart.reduce((sum, item) => sum + item.quantity, 0);
            const cartCountElements = document.querySelectorAll('#cart-count');
            cartCountElements.forEach(element => {
                element.textContent = totalItems;
            });

            if (document.getElementById('cart-screen').classList.contains('active')) {
                displayCartItems();
            }
        }

        function displayCartItems() {
            const container = document.getElementById('cart-items-container');
            const emptyCart = document.getElementById('empty-cart');
            const cartSummary = document.getElementById('cart-summary');

            if (cart.length === 0) {
                container.innerHTML = '';
                emptyCart.style.display = 'block';
                cartSummary.style.display = 'none';
                return;
            }

            emptyCart.style.display = 'none';
            cartSummary.style.display = 'block';

            let cartHTML = '';
            let total = 0;

            cart.forEach(item => {
                const itemTotal = item.price * item.quantity;
                total += itemTotal;
                const displayName = item.size ? `${item.name} (${item.size})` : item.name;

                cartHTML += `
                    <div class="cart-item">
                        <div class="cart-item-details">
                            <div class="cart-item-name">${displayName}</div>
                            <div class="cart-item-price">‚Çπ${item.price} each</div>
                        </div>
                        <div class="quantity-controls">
                            <button class="quantity-btn" onclick="decreaseQuantity('${item.name.replace(/'/g, "\\'")}', '${item.size}')">-</button>
                            <span>${item.quantity}</span>
                            <button class="quantity-btn" onclick="increaseQuantity('${item.name.replace(/'/g, "\\'")}', '${item.size}')">+</button>
                        </div>
                        <div style="margin-left: 10px; font-weight: bold;">
                            ‚Çπ${itemTotal}
                        </div>
                    </div>
                `;
            });

            container.innerHTML = cartHTML;
            document.getElementById('cart-total-amount').textContent = total;
        }

        function placeOrder() {
            if (cart.length === 0) return;

            const total = cart.reduce((sum, item) => sum + (item.price * item.quantity), 0);
            alert(`Order placed successfully!\n\nTotal: ‚Çπ${total}\n\nYour order will be prepared shortly. Thank you!`);

            cart = [];
            updateCartCount();
            showScreen('home');
        }

        function showScreen(screenId) {
            // Hide all screens
            const screens = document.querySelectorAll('.screen');
            screens.forEach(screen => {
                screen.classList.remove('active');
            });

            // Show the selected screen
            if (screenId === 'home') {
                document.getElementById('home-screen').classList.add('active');
            } else if (screenId === 'cart') {
                document.getElementById('cart-screen').classList.add('active');
                displayCartItems();
            } else {
                document.getElementById(screenId + '-screen').classList.add('active');
            }
        }

        function showOfferDetails(offerName) {
            document.getElementById('offers-list').style.display = 'none';
            document.getElementById('offer-details').style.display = 'block';

            // Update the offer title and description
            const offerTitles = {
                'HAPPY HOUR': 'Happy Hour Special Activated!',
                'KF WEEKDAY SPECIAL': 'KF Weekday Special Activated!'
            };

            const offerDescriptions = {
                'HAPPY HOUR': 'Buy 1 Get 1 on all Kingfisher Beers!',
                'KF WEEKDAY SPECIAL': '30% off on KF Premium & Ultra Max!'
            };

            document.getElementById('offer-title').textContent = offerTitles[offerName] || 'Offer Activated!';
            document.getElementById('offer-description').textContent = offerDescriptions[offerName] || 'Your offer is ready to use!';
        }

        function applyOffer() {
            alert('Offer applied successfully!\n\nYour KFPILOT code is now active.\nShow this to your waiter when placing your order.');
            showScreen('home');
        }

        function backToOffers() {
            document.getElementById('offers-list').style.display = 'block';
            document.getElementById('offer-details').style.display = 'none';
        }

        function showOfferCode(offerName) {
            alert(`Congratulations!\n\nYour offer: ${offerName}\nOffer Code: KF PILOT\n\nShow this code to your waiter to redeem your offer.`);
        }

        function setupSizeSelectors() {
            document.querySelectorAll('.menu-list-item').forEach(item => {
                const sizeSelector = item.querySelector('.size-selector');
                if (!sizeSelector) return;
                const priceDiv = item.querySelector('.item-price');
                const addBtn = item.querySelector('.item-controls');
                sizeSelector.querySelectorAll('.size-btn').forEach(btn => {
                    btn.addEventListener('click', function() {
                        // Remove selected from all
                        sizeSelector.querySelectorAll('.size-btn').forEach(b => b.classList.remove('selected'));
                        btn.classList.add('selected');
                        // Update price
                        if (priceDiv) priceDiv.textContent = '‚Çπ' + btn.dataset.price;
                        // Update add button data attributes
                        if (addBtn) {
                            addBtn.setAttribute('data-price', btn.dataset.price);
                            addBtn.setAttribute('data-size', btn.dataset.size);
                        }
                    });
                });
            });
        }

        function updateControlsForSize(item, name, size, price) {
            const controlsDiv = item.querySelector('.item-controls');
            const key = name + '|' + size;
            const cartItem = cart.find(item => item.key === key);
            if (cartItem && cartItem.quantity > 0) {
                controlsDiv.innerHTML = `
                    <div class="quantity-controls">
                        <button class="quantity-btn" onclick="decreaseQuantity('${name.replace(/'/g, "\\'")}', '${size}')">-</button>
                        <span>${cartItem.quantity}</span>
                        <button class="quantity-btn" onclick="increaseQuantity('${name.replace(/'/g, "\\'")}', '${size}')">+</button>
                    </div>
                `;
            } else {
                controlsDiv.innerHTML = `<button class="add-to-cart-btn" onclick="addToCart(this)" data-name="${name}" data-price="${price}" data-size="${size}">Add</button>`;
                controlsDiv.setAttribute('data-name', name);
                controlsDiv.setAttribute('data-price', price);
                controlsDiv.setAttribute('data-size', size);
            }
        }

        // Patch addToCart to update controls after adding
        const originalAddToCart = addToCart;
        addToCart = function(button) {
            originalAddToCart(button);
            // After adding, update controls for the current size
            const item = button.closest('.menu-list-item');
            if (item) {
                const name = item.querySelector('.menu-item-name').textContent.trim();
                const selectedBtn = item.querySelector('.size-btn.selected');
                if (selectedBtn) {
                    updateControlsForSize(item, name, selectedBtn.dataset.size, selectedBtn.dataset.price);
                } else {
                    // For items without size selectors, update controls directly
                    const itemData = item.querySelector('.item-controls');
                    const size = '';
                    const key = name + '|' + size;
                    const cartItem = cart.find(item => item.key === key);
                    if (cartItem && cartItem.quantity > 0) {
                        itemData.innerHTML = `
                            <div class="quantity-controls">
                                <button class="quantity-btn" onclick="decreaseQuantity('${name.replace(/'/g, "\\'")}', '${size}')">-</button>
                                <span>${cartItem.quantity}</span>
                                <button class="quantity-btn" onclick="increaseQuantity('${name.replace(/'/g, "\\'")}', '${size}')">+</button>
                            </div>
                        `;
                    }
                }
            }
        }

        // Patch updateAllItemControls to update controls for all menu-list-items with size selectors
        const originalUpdateAllItemControls = updateAllItemControls;
        updateAllItemControls = function() {
            document.querySelectorAll('.menu-list-item').forEach(item => {
                const name = item.querySelector('.menu-item-name').textContent.trim();
                const sizeSelector = item.querySelector('.size-selector');
                if (sizeSelector) {
                    const selectedBtn = sizeSelector.querySelector('.size-btn.selected');
                    if (selectedBtn) {
                        updateControlsForSize(item, name, selectedBtn.dataset.size, selectedBtn.dataset.price);
                    }
                } else {
                    // For items without size selectors
                    const itemData = item.querySelector('.item-controls');
                    const size = '';
                    const key = name + '|' + size;
                    const cartItem = cart.find(item => item.key === key);
                    if (cartItem && cartItem.quantity > 0) {
                        itemData.innerHTML = `
                            <div class="quantity-controls">
                                <button class="quantity-btn" onclick="decreaseQuantity('${name.replace(/'/g, "\\'")}', '${size}')">-</button>
                                <span>${cartItem.quantity}</span>
                                <button class="quantity-btn" onclick="increaseQuantity('${name.replace(/'/g, "\\'")}', '${size}')">+</button>
                            </div>
                        `;
                    } else {
                        itemData.innerHTML = `<button class="add-to-cart-btn" onclick="addToCart(this)" data-name="${name}" data-price="${itemData.getAttribute('data-price') || ''}" data-size="">Add</button>`;
                        itemData.setAttribute('data-name', name);
                        itemData.setAttribute('data-size', '');
                    }
                }
            });
            originalUpdateAllItemControls();
        }
        // Call after DOM is loaded
        document.addEventListener('DOMContentLoaded', setupSizeSelectors);
    </script>
</body>
</html>
